        <dependency>
            <groupId>pt.ist</groupId>
            <artifactId>fenix-parking</artifactId>
            <version>${version.pt.ist.fenix.parking}</version>
        </dependency>
    </dependencies>

    <profiles>
        <profile>
            <id>SQLUpdateGenerator</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <version>1.2.1</version>
                        <executions>
                            <execution>
                                <phase>test</phase>
                                <goals>
                                    <goal>java</goal>
                                </goals>
                                <configuration>
                                    <mainClass>pt.ist.fenix.webapp.SQLUpdateGeneratorMain</mainClass>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

	<repositories>
		<repository>
			<id>fenixedu-maven-repository</id>
			<url>https://repo.fenixedu.org/fenixedu-maven-repository</url>
