    <name>Fenix Webapp</name>

	<properties>
		<version.ch.qos.logback.logback.classic>1.0.12</version.ch.qos.logback.logback.classic>
        <version.org.fenixedu.fenixedu-academic>4.1.0-SNAPSHOT</version.org.fenixedu.fenixedu-academic>
        <version.pt.ist.fenixedu.delegates>4.0.0-SNAPSHOT</version.pt.ist.fenixedu.delegates>
