        <version.pt.ist.fenixedu.libraryspace>4.0.0</version.pt.ist.fenixedu.libraryspace>
        <version.pt.ist.fenixedu.onlinetests>4.0.0-SNAPSHOT</version.pt.ist.fenixedu.onlinetests>
        <version.pt.ist.fenixedu.pre-bolonha>4.0.0</version.pt.ist.fenixedu.pre-bolonha>
        <version.pt.ist.fenixedu.quc>4.0.0-SNAPSHOT</version.pt.ist.fenixedu.quc>
        <version.pt.ist.fenixedu.teacher-credits>4.0.0-SNAPSHOT</version.pt.ist.fenixedu.teacher-credits>
        <version.pt.ist.fenixedu.teacher-evaluation>4.0.0-SNAPSHOT</version.pt.ist.fenixedu.teacher-evaluation>
        <version.pt.ist.fenixedu.tutorship>4.0.0</version.pt.ist.fenixedu.tutorship>
        <version.pt.ist.fenixedu.vigilancies>4.0.0-SNAPSHOT</version.pt.ist.fenixedu.vigilancies>
		<version.org.fenixedu.idcards>2.0.0-SNAPSHOT</version.org.fenixedu.idcards>
		<version.pt.ist.fenix.ist>2.0.0-SNAPSHOT</version.pt.ist.fenix.ist>
		<version.pt.ist.fenix.parking>2.0.0-SNAPSHOT</version.pt.ist.fenix.parking>
        <version.org.fenixedu.fenixedu-learning>4.0.0-SNAPSHOT</version.org.fenixedu.fenixedu-learning>
        <version.org.fenixedu.fenixedu-ist-learning>1.5.0-SNAPSHOT</version.org.fenixedu.fenixedu-ist-learning>
		<version.org.fenixedu.ashes.theme>1.1.1</version.org.fenixedu.ashes.theme>
		<version.org.fenixedu.bennu>3.4.0</version.org.fenixedu.bennu>
		<version.org.fenixedu.bennu.renderers>5.0.1</version.org.fenixedu.bennu.renderers>
	</properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.tomcat.maven</groupId>
                <artifactId>tomcat7-maven-plugin</artifactId>
                <version>2.2</version>
                <configuration>
                    <path>/fenix</path>
                    <port>8080</port>
                    <warSourceDirectory>../fenixedu-academic/src/main/webapp</warSourceDirectory>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <fork>true</fork>
                    <maxmem>2048</maxmem>
                    <meminitial>1024</meminitial>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.fenixedu</groupId>
                <artifactId>bennu-maven-plugin</artifactId>
                <version>${version.org.fenixedu.bennu}</version>
            </plugin>
        </plugins>
    </build>

